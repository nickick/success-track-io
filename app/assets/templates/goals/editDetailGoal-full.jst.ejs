<div class="large-12 goal-detail-edit">
	<div class="row large-12">
    <!-- time frame -->
		<div class="label large-2 columns">
			<label for="Today_radio"><h3 class="edit-detail-field">Time Frame</h3></label>
		</div>
		<div class="field large-10 columns">
  		<ul class="button-group">
  			<% timeFrames.each(function(timeFrame) { %>
  				<% var frame = timeFrame.escape('frame') %>
          <% var timeFrameId = timeFrame.escape('id')%>
          <% var goalTimeId = goal.escape('time_frame_id') %>
          <% var goalId = goal.escape('id') %>
  				<% if (timeFrameId == goalTimeId) {%>
  					<input type="radio" name="time_frame_<%=goalId%>" id="<%= frame %>_radio_for_goal_<%= goalId %>" value="<%= timeFrameId %>" checked >
  				<%} else {%>
  					<input type="radio" name="time_frame_<%=goalId%>" id="<%= frame %>_radio_for_goal_<%= goalId %>" value="<%= timeFrameId %>">
  				<% } %>
  				<label class="radio-label" for="<%= frame %>_radio_for_goal_<%= goalId %>"><%= frame %></label>
  			<% }) %>
  		</ul>
		</div>
    <!-- finish date -->
    <% var now = new Date() %>
		<div class="label large-2 columns">
			<label for="finish_date"><h3 class="edit-detail-field">Finish Date</h3></label>
		</div>
		<div class="field large-10 columns">
			<input type="date" id="finish_date" min=<%= todayString %> value=<%= todayString %>>
		</div>
    <!-- description -->
		<div class="label large-2 columns">
			<label for="goal_name"><h3 class="edit-detail-field">Description</h3></label>
		</div>
		<div class="field large-10 columns">
			<textarea rows="4"
        placeholder="Run around the Charles under 6:30 at least 3 times per week"
        id="goal_description"><%= goal.escape("description")%></textarea>
		</div>
	</div>
</div>